<Button>:
	border:0,0,0,0

<MainScreen>:
    name: 'main'
	canvas.before:
        Color:
            rgba: .259, .522, .957, 1
        Rectangle:
            size: root.size

    Button:
		background_color: .259, .522, .957, 1
        size_hint: None, .10
        width: self.height * 2
        pos_hint: {'center_x': .5, 'center_y': .5}
        on_release: root.manager.start_tetris()
        font_name: 'Dejavusans'
		font_size: 40
        text: 'Start'

<TetrisScreen>:
    name: 'tetris'
    tetris: tetris
	down_button:down_button
    canvas.before:
        Color:
            rgba: .2, .2, .3, 1 # your color here
        Rectangle:
            size: root.size

	AnchorLayout:
        anchor_x:"left"
        anchor_y:"bottom"
		StackLayout:
            orientation:"lr-bt"
			size_hint: .7, 1
			Tetris:
				id: tetris
				shape: 20, 10
				on_game_over: root.manager.current = 'main'

	AnchorLayout:
        anchor_x:"right"
        anchor_y:"top"
        StackLayout:
            orientation:"lr-tb"
            size_hint: .3, 1
            padding: [0, 0, self.width / 4, 0]
			TetrisPiece:
				id: tetris_piece
				piece_num: tetris.piece_num
				shape: 4, 4
				size_hint: 1, None
				height: self.width 
				pos_hint: {'top': .97, 'right': .97}

			Label:
				id: points
				size_hint: 1, .10
				font_name: 'Dejavusans'
				font_size: 20
				halign: 'center'
				#pos_hint: {'top': .77, 'right': .97}
				canvas.before:
					Color:
						rgba: .0, .0, .5, .5 # your color here
					Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height

				text: 'score: ' + str(int(tetris.points))

			Label:
				id: lines
				size_hint: 1, .10
				font_name: 'Dejavusans'
				font_size: 20
				halign: 'center'
				#pos_hint: {'top': .77, 'right': .97}
				canvas.before:
					Color:
						rgba: .0, .0, .5, .5 # your color here
					Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
				text: 'lines: ' + str(int(tetris.lines))

			AnchorLayout:
				id:direction
				anchor_x:"center"
                anchor_y:"center"
                size_hint: 1, .50
				Button:
					id:down_button
					background_color: .259, .522, .957, 1
                    size_hint: .8, .10
                    width: self.height * 2
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text:'Stop'
					on_press: app.stop()
                    font_name: 'Dejavusans'
                    font_size: 20

<Tetris>:
    canvas.before:
        Color:
			rgba: .45, .45, .45, .8 # your color here
        Rectangle:
            size: root.size

<TetrisPiece>:
    canvas.before:
        Color:
            rgba: .0, .0, .9, .1 # your color here
        Rectangle:
            size: root.size

<Brick>:
    rgba: (.9, .1, .1, .9)
    brick_border: border
    brick_square: square
    BrickBorder:
        id: border
        canvas.before:
            Color:
                rgba: .45, .45, .45, .8 # your color here
            Line:
                width: .1
                rectangle: self.parent.x, self.parent.y, self.parent.width, self.parent.height
    BrickSquare:
        id: square
        canvas.before:
            Color:
                rgba: self.parent.rgba # your color here
            Rectangle:
                pos: self.parent.pos
                size: (self.parent.width - 3, self.parent.height - 3)

